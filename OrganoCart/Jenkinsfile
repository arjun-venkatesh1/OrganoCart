pipeline {
    agent any
    tools {
        maven 'maven'
        jdk 'java'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        
        stage ('Compile') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true -f OrganoCart/pom.xml clean compile' 
            }
        }
        
        stage ('Test') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true  -f OrganoCart/pom.xml clean test' 
            }
        }
        
        stage ('Build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true  -f OrganoCart/pom.xml install' 
            }
        }
        
        stage ('Deploy to DEV Env') {
            steps {
                
                sh 'docker stop organocart-dev'
                sh 'docker rm -f organocart-dev'
                sh 'docker run -d -it --name organocart-dev -p 9005:8080 -v $(pwd)/OrganoCart/target/OrganoCart.war:/usr/local/tomcat/webapps/organocart.war tomcat'

            }
        }
    }
}
